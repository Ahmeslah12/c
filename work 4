#include <iostream>   
using namespace std;

double sum=0,count=8,average;
void codeBegin(int s[10]) /* دالة ادخال مصفوفة الطلاب */
{   
    
}
void codeMiddle(int m[8]) /* دالة ادخال مصفوفة الدرجات */
{
    
    cout<<"Insert your materials degrees: "<<endl;
    for (int y = 0; y < 8; y++)
    {
        cin>>m[y];
    }
    for (int i = 0; i < 8; i++)
    {
        cout<<"Students "<<i+1<<": "<<m[i]<<endl;
        sum = sum+m[i];
    
    }
    cout<<"Sum: "<<sum<<endl;
    average=sum/count;
}
void codeEnd(string name, int id, char d, int degree ,double average) /* دالة المخرجات */
{
    
    average=sum/count;
    cout<<"--------------"<<endl;
    cout<<"Name: "<<name<<endl;
    cout<<"University ID: "<<id<<endl;
    cout<<"Department: "<<d<<endl;
    cout<<"Student Degree: "<<degree<<endl;
    cout<<"Materials average: "<<average<<endl;
}

int main() 
{
	char x;                             
	string name;                   
	int id,a,y=1 ,m[8],i,s[10];
	double sum=0,average;	
	for (int u = u; u < 10; u++)
	{
	cout<<"enter your name: ";      
	cin>>name;                       
	cout<<"enter your id: ";
	cin>>id;                         
	cout<<x<<"enter A or T or c ";
	cin>>x;
	if(x=='A'){
	   cout<<"control"<<endl;
	}else if(x=='T'){
	   cout<<"communication"<<endl;
	}else if(x=='C'){
	  cout<<"computer"<<endl;
    }cout<<"enter the grade supgeict: ";
	cin>>a;
	if((a>=90)&&(a)<=100)
	cout<<"A";
	else if((a>=80)&&(a)<90)
	cout<<"B";
	else if((a>=70)&&(a)<80)
	cout<<"C";
	else if((a>=60)&&(a)<70)
	cout<<"D";
	else if((a>=50)&&(a)<60)
	cout<<"F"<<endl;
	cout<<endl;
    codeMiddle(m);
    codeEnd(name,id,x,a,average);
    codeBegin(s); /*استدعاء  الدوال */
    }
	return 0;
}
